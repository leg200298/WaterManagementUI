<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WaterStyle;component/Global/FontStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TabTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Margin" Value="10,0,10,0"/>
        <Setter Property="MaxWidth" Value="60"/>
        <Setter Property="FontFamily" Value="{StaticResource AllFontFamily}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="UserInfoTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource UserInfoFontSize}"/>
        <Setter Property="Foreground" Value="{StaticResource AllForeground}"/>
        <Setter Property="FontFamily" Value="{StaticResource AllFontFamily}"/>
    </Style>
    
</ResourceDictionary>